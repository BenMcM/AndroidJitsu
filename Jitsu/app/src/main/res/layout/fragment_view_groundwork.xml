<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jitsu.ben.uk.consumerest.fragment.FragmentViewGroundWork">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/groundwork_fragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="@string/groundwork_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/groundwork_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/groundwork_name_value"
                android:layout_toRightOf="@+id/groundwork_label"
                android:paddingLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="viewStart" />
            <RelativeLayout
                android:id="@+id/groundwork_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/groundwork_name_value">

                <RelativeLayout
                    android:id="@+id/groundwork_details_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:text="@string/translation_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_translation_label"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/groundwork_translation_label"
                        android:id="@+id/groundwork_translation_value"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <TextView
                        android:text="@string/grade_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_translation_label"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_grade_label"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_translation_value"
                        android:layout_toRightOf="@+id/groundwork_grade_label"
                        android:id="@+id/groundwork_grade_value"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <TextView
                        android:text="@string/start_position_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_grade_label"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_startposition_label"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_grade_value"
                        android:layout_toRightOf="@+id/groundwork_startposition_label"
                        android:id="@+id/groundwork_startposition_value"
                        android:layout_alignParentEnd="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <TextView
                        android:text="@string/description_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_startposition_label"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_description_label"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_description_label"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_description_value"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/groundwork_edit_details_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible" >

                    <RelativeLayout
                        android:id="@+id/groundwork_edit_translation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/translation_label"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/groundwork_edit_translation_value"
                            android:layout_alignParentStart="true"
                            android:id="@+id/groundwork_edit_translation_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:inputType="text"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/groundwork_edit_translation_label"
                            android:id="@+id/groundwork_edit_translation_value"
                            android:layout_alignParentEnd="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/groundwork_edit_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_edit_translation">

                        <TextView
                            android:text="@string/grade_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignBottom="@+id/groundwork_edit_grade_value"
                            android:layout_alignParentStart="true"
                            android:id="@+id/groundwork_edit_grade_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/groundwork_edit_grade_label"
                            android:id="@+id/groundwork_edit_grade_value"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/groundwork_edit_startposition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_edit_grade">

                        <TextView
                            android:text="@string/start_position_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignBottom="@+id/groundwork_edit_startposition_value"
                            android:layout_alignParentStart="true"
                            android:id="@+id/groundwork_edit_startposition_label"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        <EditText
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:inputType="text"
                            android:layout_toRightOf="@+id/groundwork_edit_startposition_label"
                            android:id="@+id/groundwork_edit_startposition_value"
                            android:layout_alignParentEnd="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </RelativeLayout>

                    <TextView
                        android:text="@string/description_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_edit_startposition"
                        android:layout_alignParentStart="true"
                        android:id="@+id/groundwork_edit_description_label"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <EditText
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groundwork_edit_description_label"
                        android:layout_alignParentStart="true"
                        android:inputType="textCapSentences|textMultiLine"
                        android:id="@+id/groundwork_edit_description_value"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groundwork_view"
                android:layout_alignParentStart="true"
                android:text="@string/edit" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_button"
                android:layout_alignParentEnd="true"
                android:text="@string/save"
                android:visibility="gone" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_button"
                android:layout_toLeftOf="@id/save_button"
                android:text="@string/cancel"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
